mixin imageWidget(img, webm, mp4)
    .image-tile(class!=attributes.class data-video-panel)
        .image-tile-container(style="background-image: url('#{img}');" data-panel-image)
        if mp4 !== false && webm !== false
            .image-tile-container(data-panel-video)
                +video('http://techslides.com/demos/sample-videos/small')('autoplay muted loop')



