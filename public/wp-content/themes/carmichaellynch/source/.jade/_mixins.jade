mixin digitalScreenInfo(headline, body, push)
    .col-xs-12.col-sm-5.col-md-4.col-lg-3(class= push ? "col-sm-push-7 col-md-push-8 col-lg-push-9" : "")
        .digital-screen-info
            .table
                .table-center
                    h3.headline!=headline
                    !=body


mixin digitalScreenDevice(type,pull)
    - var classes = type;
    .col-xs-12.col-sm-7.col-md-8.col-lg-9(class= pull ? "digital-screen-offset col-sm-pull-5 col-md-pull-4 col-lg-pull-3" : "")
        .digital-screen-device-container.center(class!=classes)
            .digital-screen-device-content-container
                .digital-screen-device-content-container-wrapper
                    +gallery()
                    //+imageWidget('https://s3-us-west-2.amazonaws.com/s.cdpn.io/230054/media-integration-bg.jpg','','')
            .digital-screen-device-image



