mixin heroPlayer(title, tagline, id)

    .hero-video-container(id="hero-video-#{id}")

        .hero-image
            .desktop(style="background-image:url(images/temp/"+id+"-marquee.jpg)")
            .mobile(style="background-image:url(images/temp/"+id+"-marquee-mobile.jpg)")

