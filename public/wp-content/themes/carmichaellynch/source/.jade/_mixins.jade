mixin linkListDesktopMenu(links, footer)
    ul.linksList-desktop
        each arg,i in links
            if i == 0
                li.link-item.active.inactive(data-index=i id="link-item-" + arg) #{arg}
            else
                li.link-item.inactive(data-index=i id="link-item-" + arg) #{arg}

    .list-footer-desktop.col-xs-12
        p #{footer}




